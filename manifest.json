{
  "manifest_version": 3,
  "name": "Free Blocks",
  "permissions" : [
    "storage",
    "declarativeNetRequest"
  ],
  "matches": [
    "https://www.freeblocksapp.com/*"
  ],

  "version": "1.0",
  "description": "Harness the power of sharing your availability.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "host_permissions": [
    "https://www.freeblockscal.com/*"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_title": "Free Blocks",
    "default_popup": "freeblocks.html",
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+B",
          "mac": "Command+B"
        },
        "description": "Copy your availability to the clipboard."
      }
    }
  }
}